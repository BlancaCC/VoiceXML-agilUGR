<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xml:lang="es-ES">

<!--
Fichero inicial en español, despues de que el usuario haya elegido hablar en español
-->

<form id="tomar_nombre_usuario" scope="document">
    <!-- PedinombreUsuariomos al usuario que nos diga su nombre, para almacenarlo -->
    <field name = "asignatura">
	    <grammar src="asignaturas.jsgf"/>
        <prompt> Hola querido amigo ¿de qué asignatura quieres información?</prompt>
    </field>
    <filled mode="all" namelist="asignatura">
        <prompt>El nombre que me has dado es <value expr="asignatura" /></prompt>
    </filled>
    </form>
</vxml>
